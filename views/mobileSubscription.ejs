<%- include("./partials/header") %>
<div class="container">
    <div class="row aboutDiv">
        <div class="col"></div>
        <div class="col text-center aboutContent">
            <h1>Subscribe</h1>

            <p>Fill in your contact details to get a daily album recommendation</p>

            <form action="/newSupporter" method="POST" class="form-inline subscriptionForm">
                <input type="text" class="form-control" id="name" name="name" placeholder="What's your name?" required>
                <input class="form-control" type="email" placeholder="E-Mail" name="email" required>
                <button class="btn btn-success" type="submit">Subscribe</button>
                <a class="btn btn-dark" href="/">Back</a>
              </form>
        </div>
        <div class="col"></div>
    </div>
</div>


<%- include("./partials/footer") %>